#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {
    
    float salario;
    float salQuin;
    float salTrez;
    float salDem;
    
    scanf("%f", &salario);
    
    if (salario >= 500){
    
    salQuin = salario*1.10;
    
    printf("%.2f", salQuin);
    
    }
    if (salario >= 300 && salario < 500){
    
    salTrez = salario*1.07;
    
    printf("%.2f", salTrez);
    
    }
    if (salario < 300){
    
    salDem = salario*1.05;
    
    printf("%.2f", salDem);
    
    }
    
	return 0;
}
